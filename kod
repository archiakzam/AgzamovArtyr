#include <iostream>
#include <stdlib.h>
using namespace std;
const int n=10;
int main()
{
    setlocale(LC_ALL,"RU");
    int max,nom;
    int sum=1;
    int a[n];
    for (int i=0; i<=n; i++){
        a[i]=rand()%200-100;
    }
    max=a[0];
    for(int i=1;i<=n;i++){
        if(a[i]>max){
            max=a[i];
            nom=i+1;
            sum=1;         
        }
        else
            if(a[i]==max){
                sum+=1;
            }
    }
    for(int i=1;i<=n;i++){
        cout<<a[i]<<" ";
    }
    cout<<endl;
    cout<<"max элемент ="<< max<< endl;
    cout<<"номер max элемента ="<< nom<< endl;
    cout<<"кол-во элементов max ="<< sum<< endl;
    return 0;
}
