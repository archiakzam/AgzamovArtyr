#include <iostream> 
#include <cmath> 
#include <math.h> 
using namespace std; 
const double epsilon = 1e-6; 
    double f(double x) { 
    return 0.1*pow(x,2)-x*log(x); 
} 
double f1(double x) { 
    return 0.2*x-1/x; 
} 
double f2(double x) { 
    return 0.2+1/pow(x,2); 
} 
int main() { 
    setlocale(LC_ALL,"Rus"); 
    double a; 
    double b; 
    double c; 
    cout << "Введите а: "; 
    cin >> a; 
    cout <<"Введите b: "; 
    cin >> b; 
    c = (a + b) / 2; 
    if (f(a) * f2(a) > 0) 
        a = c; 
    else 
        b = c; 
    while (abs(f(c)) >= epsilon) { 
        c = c - (f(c) / f1(c)); 
    } 
    cout<<"X равен: " << c; 
    return 0; 
} 
